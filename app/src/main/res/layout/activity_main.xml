<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">


	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar_main"
		android:layout_width="362dp"
		android:layout_height="53dp"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"
		android:theme="?attr/actionBarTheme"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:title="@string/main_title" />

	<ImageView
		android:id="@+id/imageFrame"
		android:layout_width="327dp"
		android:layout_height="160dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="32dp"
		android:layout_marginEnd="16dp"
		android:background="@android:color/darker_gray"
		android:contentDescription="@string/frame_retrieved_main_image_view_descriptor"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
		tools:srcCompat="@tools:sample/avatars" />

	<ImageView
		android:id="@+id/imageFaceCrop"
		android:layout_width="158dp"
		android:layout_height="146dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="36dp"
		android:background="@android:color/darker_gray"
		android:contentDescription="@string/face_crop_image_view_descriptor"
		app:layout_constraintRight_toLeftOf="@+id/imageMatchDataset"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageFrame"

		>

	</ImageView>

	<ImageView
		android:id="@+id/imageMatchDataset"
		android:layout_width="147dp"
		android:layout_height="146dp"
		android:layout_marginTop="36dp"
		android:layout_marginEnd="16dp"
		android:background="@android:color/darker_gray"
		android:contentDescription="@string/match_in_dataset_image_view_descriptor"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/imageFaceCrop"
		app:layout_constraintTop_toBottomOf="@+id/imageFrame"></ImageView>


	<TextView
		android:id="@+id/textViewNameOfSuspectMain"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:text="@string/name_main"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@+id/textViewAccuracyMain"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageFaceCrop" />

	<TextView
		android:id="@+id/textViewAccuracyMain"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:text="@string/accuracy_main"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewNameOfSuspectMain" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:text="Rosto Ampliado"
		app:layout_constraintEnd_toStartOf="@+id/textView2"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageFrame" />

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="81dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="42dp"
		android:text="Imagem do Arquivo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/textView"
		app:layout_constraintTop_toBottomOf="@+id/imageFrame" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="275dp"
		android:layout_marginBottom="11dp"
		android:text="Imagem Capturada"
		app:layout_constraintBottom_toTopOf="@+id/imageFrame"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
		app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
