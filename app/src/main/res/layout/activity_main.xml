<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background="@drawable/sampa_background1"
	>


	<ImageView
		android:id="@+id/imageFrame"
		android:layout_width="match_parent"
		android:layout_height="273dp"
		android:layout_marginTop="72dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:contentDescription="@string/frame_recebido"/>


	<ImageView
		android:id="@+id/imageFaceCrop"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:contentDescription="@string/rosto_do_suspeito"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/imageFrame" />

	<ImageView
		android:id="@+id/imageMatchDataset"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:contentDescription="@string/rosto_comparado"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/imageFrame" />


	<Button
		android:id="@+id/formula"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:background="@drawable/botao"
		android:text="@string/cadastrar_novo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />



	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/imageFaceCrop"
		android:layout_width="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:background="@drawable/backcard">


		<Button
			android:id="@+id/botaoHistorico"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/botao"
			android:text="@string/historico"
			android:layout_marginEnd="1dp"
			android:layout_marginTop="24dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>


		<Button
			android:id="@+id/botaoPerfil"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="1dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="48dp"
			android:background="@drawable/botao"
			android:text="@string/perfil"
			app:layout_constraintTop_toBottomOf="@id/botaoHistorico"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />

		<TextView
			android:id="@+id/textViewNameOfSuspectMain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="@string/nome"
			android:textColor="#fff"
			android:textSize="24sp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/textViewAccuracyMain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="64dp"
			android:text="@string/acuracia"
			android:textColor="#fff"
			android:textSize="24sp"
			android:typeface="normal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />


	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
